{
	"compilerOptions": {
		"outDir": "./lib/esm",
		"declarationDir": "./lib/esm",
		"module": "ESNext",
		"target": "es2022",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true, // Avoid type-checking external library typings
		"moduleResolution": "bundler",
		"noImplicitAny": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib"]
}
